{
	"name": "pantree-shopping-api",
	"version": "1.1.0",
	"description": "Pantree - Shopping API",
	"main": "src/server.js",
	"scripts": {
		"setup": "npm install && npx husky install",
		"lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
		"fix": "npm run lint -- --fix",
		"format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
		"build": "tsc",
		"dev": "ts-node-dev --respawn ./src/server.ts",
		"start": "node --unhandled-rejections=strict ./dist/server.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mittell/pantree-shopping-api.git"
	},
	"author": "Chris Mittell",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/mittell/pantree-shopping-api/issues"
	},
	"homepage": "https://github.com/mittell/pantree-shopping-api#readme",
	"dependencies": {
		"@typegoose/typegoose": "^9.13.2",
		"body-parser": "^1.20.1",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-validator": "^6.14.2",
		"helmet": "^6.0.0",
		"mongodb": "^4.12.1",
		"mongoose": "^6.7.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.2.0",
		"@commitlint/config-conventional": "^17.2.0",
		"@types/body-parser": "^1.19.2",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.14",
		"@types/node": "^18.11.13",
		"@typescript-eslint/eslint-plugin": "^5.46.0",
		"@typescript-eslint/parser": "^5.46.0",
		"eslint": "^8.29.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.2",
		"nodemon": "^2.0.20",
		"prettier": "^2.8.1",
		"ts-node": "^10.9.1",
		"ts-node-dev": "^2.0.0"
	}
}
